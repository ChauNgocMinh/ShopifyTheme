<style>
  .banner-section {
    position: relative;
    width: 100%;
    height: 100vh;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
  }

  .banner-image img {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transform: translate(-50%, -50%);
    z-index: -1;
  }

  .banner-content {
    position: relative;
    color: white;
    z-index: 2;
  }

  .banner-content h1{
    color: white;
  }
  .banner-button {
    display: inline-block;
    padding: 7px 50px;
    background: #ffc27f;
    color: white;
    text-decoration: none;
    border-radius: 35px;
    font-size: 18px;
  }
</style>

<section class="banner-section">
  <div class="banner-image">
    {% if section.settings.image != blank %}
      <img src="{{ section.settings.image | img_url: '1920x1080' }}" />
    {% endif %}
  </div>
  
  <div class="banner-content container">
    <h1>{{ section.settings.heading }}</h1>
    <p>{{ section.settings.subheading }}</p>
    {% if section.settings.button_text != blank %}
      <a href="{{ section.settings.button_link }}" class="banner-button">{{ section.settings.button_text }}</a>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Image",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Chọn ảnh",
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Tiêu đề",
      "default": "Trầm hương Hưng Phát - Hương vân ngộ quý nhân"
    },
    {
      "type": "inline_richtext",
      "id": "subheading",
      "label": "Phụ đề",
      "default": "Khám phá sản phẩm mới nhất của chúng tôi"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Nội dung nút",
      "default": "Xem ngay"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Liên kết nút"
    }
  ],
  "presets": [
    {
      "name": "Image/image Banner"
    }
  ]
}
{% endschema %}
